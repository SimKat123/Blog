<div class="card">
  <div class="card-header">
    <h2>{{title}}</h2>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{content}}</p>
      <footer class="blockquote-footer">Posted by {{user.name}} on {{format_date date_created}}</footer>
    </blockquote>
  </div>
    <div>
        {{> comments}}
    </div>
    <div>
        {{> comment-form}}
    </div>
</div>
<script src="/js/comment.js"></script>